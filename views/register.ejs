<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .background-image {
        background-image: url("https://plus.unsplash.com/premium_photo-1676325101744-ce4a45a331c7?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fG1lZGljYWx8ZW58MHx8MHx8fDA%3D"); /* Replace with your image URL */
        background-size: cover;
        background-position: center;
      }
    </style>
  </head>
  <body
    class="background-image bg-gray-800 bg-opacity-60 flex items-center justify-center min-h-screen"
  >
    <div class="absolute inset-0 bg-gray-800 bg-opacity-50"></div>
    <!-- Semi-transparent overlay -->

    <form
      action="/register"
      method="post"
      class="relative bg-white p-8 rounded-lg shadow-lg w-full max-w-md"
    >
      <h1 class="text-2xl font-semibold text-blue-600 mb-6 text-center">
        Register
      </h1>

      <!-- Name -->
      <div class="mb-4">
        <label for="name" class="block text-gray-700 font-medium mb-2">
          Name
        </label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Enter your name"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <!-- Age -->
      <div class="mb-4">
        <label for="age" class="block text-gray-700 font-medium mb-2"
          >Date of Birth</label
        >
        <input
          type="date"
          id="age"
          name="age"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <!-- Gender -->
      <div class="mb-4">
        <label for="gender" class="block text-gray-700 font-medium mb-2">
          Gender
        </label>
        <select
          name="gender"
          id="gender"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        >
          <option disabled selected>Select Gender</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
      </div>

      <!-- Phone Number -->
      <div class="mb-4">
        <label for="phoneNumber" class="block text-gray-700 font-medium mb-2">
          Phone Number
        </label>
        <input
          type="number"
          id="phoneNumber"
          name="phoneNumber"
          placeholder="Enter your Phone number"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <!-- Email -->
      <div class="mb-6">
        <label for="email" class="block text-gray-700 font-medium mb-2">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter your email"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <input
          type="submit"
          value="Submit"
          class="w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition duration-300 cursor-pointer"
        />
      </div>
      <div class="mt-4">
        <a class="text-blue-800 hover:underline" href="/">Back to Home</a><br />
        <p>
          Already have an account?
          <a class="text-blue-800 hover:underline" href="/login">Login</a>
        </p>
      </div>
    </form>
  </body>
</html>
